			a.logo(href="/")
				img(src="/local/assets/img/logo.svg", alt="Логотип" class="logo__img")
		.header__rihgt-block
			.header__top
				ul.top-nav
					for item in top_arr
						li.top-nav__item
							a.top-nav__link(href="/")=item
					li.top-nav__item
						a.top-nav__link(href="/")
							| еще
				a.header__search(href="/")
					+icon("search")(width="18" height="18" class="header__search-icon")
				a.button.header__btn(href="/")
