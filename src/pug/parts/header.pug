-let top_arr = ["Частным клиентам", "Корпоративным клиентам", "Где купить?", "Контакты"]
- let bottom_arr = ["Доверительное управление", "Институциональные инвесторы"]
header.header(class=headerClass)
	.site-container.header__container
		.header__left-block
			a.logo(href="/")
				img(src="/local/assets/img/logo.svg", alt="Логотип" class="logo__img")
			a.logo.logo_white(href="/")
				img(src="/local/assets/img/logo-white.svg", alt="Логотип" class="logo__img")
		.header__rihgt-block
			.header__top
				ul.top-nav
					for item in top_arr
						li.top-nav__item
							a.top-nav__link(href="/")=item
					li.top-nav__item
						.header-dropdown
							button.button-reset.top-nav__link.header-dropdown__btn(href="/")
								| еще
								+icon("arrow-shevron-bottom-small")(width="8" height="5" class="header-dropdown__btn-icon")
							.header-dropdown__content
								.header-dropdown__content-container
									a.header-dropdown__link(href="/")
										|	 О компании
									a.header-dropdown__link(href="/")
										|	Новости
									a.header-dropdown__link(href="/")
										|	Пресс-центр
									a.header-dropdown__link(href="/")
										|	Информация
				// убрать класс если понадобится кнопка поиска
				a.header__search.visually-hidden(href="/")
					+icon("search")(width="18" height="18" class="header__search-icon")
				a.button.header__btn(href="/")
					|	  Личный кабинет
			.header__bottom
				ul.bottom-nav
					li.bottom-nav__item
						.header-dropdown
							a.bottom-nav__link.header-dropdown__btn(href="/")
								| Паевые инвестиционные фонды
								+icon("arrow-shevron-bottom-small")(width="8" height="5" class="header-dropdown__btn-icon")
									.header-dropdown__content
							.header-dropdown__content
								.header-dropdown__content-container
									a.header-dropdown__link(href="/")
										|	 Открытые ПИФы
									a.header-dropdown__link(href="/")
										|	 Закрытые ПИФы
					for item in bottom_arr
						li.bottom-nav__item
							a.bottom-nav__link(href="/")=item
				a.header__tel(href="tel:+78435186677")
					+icon("tel")(width="19" height="19" class="header__tel-icon")
					|	+ 7 (843) 518-66-77
